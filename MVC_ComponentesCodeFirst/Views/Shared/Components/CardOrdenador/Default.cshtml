@model MVC_ComponentesCodeFirst.Models.Ordenadores.OrdenadorDto

<div class="card text-center col-lg-4 p-0 mb-3">
    <div class="card-header">
        <i class="bi bi-pc-display"></i>
    </div>

    <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(modelItem => modelItem.Descripcion)</h5>

        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                @{
                    if (@Model.PedidoId is not null)
                    {
                        <i class="bi bi-receipt-cutoff"></i> @Html.DisplayFor(modelItem => modelItem.Pedido.Descripcion)
                    }
                }
            </li>
        </ul>
    </div>
    <div class="card-footer text-body-secondary">
        Coste: @Html.DisplayFor(modelItem => modelItem.Coste) €
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-controller="Ordenadores" asp-route-id="@Model.Id" class="btn btn-light"><i class="bi bi-pencil-fill"></i> Edit</a>
        <a asp-action="Details" asp-controller="Ordenadores" asp-route-id="@Model.Id" class="btn btn-light"><i class="bi bi-eye-fill"></i> Details</a>
        <a asp-action="Delete" asp-controller="Ordenadores" asp-route-id="@Model.Id" class="btn btn-light"><i class="bi bi-trash-fill"></i> Delete</a>
    </div>
</div>
