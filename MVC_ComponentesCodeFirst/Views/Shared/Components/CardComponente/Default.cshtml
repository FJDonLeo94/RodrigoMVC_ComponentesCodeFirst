@model MVC_ComponentesCodeFirst.Models.Componentes.ComponenteDto

<div class="card text-center col-lg-4 p-0 mb-3">
    <div class="card-header">
        <i class="bi bi-cpu"></i> @Html.DisplayFor(modelItem => modelItem.Tipo)
    </div>
            
    <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(modelItem => modelItem.NumeroDeSerie)</h5>
        <p class="card-text">@Html.DisplayFor(modelItem => modelItem.Descripcion)</p>

        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                @{
                    if (@Model.OrdenadorId is not null)
                    {
                        <i class="bi bi-pc-display"></i> @Html.DisplayFor(modelItem => modelItem.Ordenador.Descripcion)
                    }
                }
            </li>
        </ul>
    </div>
    <div class="card-footer text-body-secondary">
        Coste: @Html.DisplayFor(modelItem => modelItem.Coste) €
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-controller="Componentes" asp-route-id="@Model.Id" class="btn btn-light"><i class="bi bi-pencil-fill"></i> Edit</a>
        <a asp-action="Details" asp-controller="Componentes" asp-route-id="@Model.Id" class="btn btn-light"><i class="bi bi-eye-fill"></i> Details</a>
        <a asp-action="Delete" asp-controller="Componentes" asp-route-id="@Model.Id" class="btn btn-light"><i class="bi bi-trash-fill"></i> Delete</a>
    </div>
</div>